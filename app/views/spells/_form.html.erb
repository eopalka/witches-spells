<%= render partial: "layouts/error", locals: {object: @spell}  %>


<%= form_for [@book, @spell] do |f| %>
    <%= f.label (:name) %>
    <%= f.text_field :name %>
    <br>
    <%= f.label (:description) %>
    <%= f.text_area :description %>
    <br>
    <%= f.label (:difficulty_level) %>
    <%= f.number_field :difficulty_level, min: 1, max: 10 %>
    <br>
    <%= f.label (:power_level) %>
    <%= f.number_field :power_level, min: 1, max: 10 %>
    <br>
    <%= book_form_fields(f) %>
    <%= f.submit %>
<% end %>

<script>
  $(document).ready(function(){
    $('select').formSelect();
  });
       </script>

