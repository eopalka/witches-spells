<!DOCTYPE html>
<html>
  <head>
    <title>WitchesSpells</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


  <nav>
<div class="nav-wrapper" style="color:#fff;background:#484f4f">
  <a class="brand-logo"> Only Witches</a>
  <ul id="nav-mobile" class="right hide-on-med-and-down">
    <% if !logged_in? %>
    <li><%= link_to 'sign-up', "users/new"%></li>
    <% else %>
    <li><%= link_to 'spells', spells_path%></li>
    <li><%= link_to 'books', books_path%></li>
    <% end %>
  </ul>
</div>
</nav>


  </head>

  <body>
    <%= yield %>
  </body>
</html>
